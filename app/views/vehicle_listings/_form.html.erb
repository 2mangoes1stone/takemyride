<div class="row">
  <div class="col-xs-12">
    <%= form_for(vehicle_listing, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <% if vehicle_listing.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(vehicle_listing.errors.count, "error") %> prohibited this vehicle_listing from being saved:</h2>

          <ul>
          <% vehicle_listing.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :car_model_id %>
        </div>
        <div class="col-sm-8">
          <%= f.collection_select :car_model_id, CarModel.order(:name),:id,:name, include_blank: true %>
        </div>  
      </div>

      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :make_year %>
        </div>
        <div class="col-sm-8">
          <%= f.number_field :make_year %>
        </div>
      </div>
      
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :description %>
        </div> 
        <div class="col-sm-8">
          <%= f.text_area :description %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :max_passengers %>
        </div>
        <div class="col-sm-8">
          <%= f.number_field :max_passengers %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :start_date %>
        </div>
        <div class="col-sm-8">
          <%= f.date_select :start_date %>
        </div>  
      </div>

      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :end_date %>
        </div>  
        <div class="col-sm-8">
          <%= f.date_select :end_date %>
        </div>  
      </div>

      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :minimum_days_to_rent %>
        </div>
        <div class="col-sm-8">  
          <%= f.number_field :minimum_days_to_rent %>
        </div>  
      </div>

      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :price_per_day %>
        </div>
        <div class="col-sm-8">  
          <%= f.number_field :price_per_day %>
        </div>  
      </div>

      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :address %>
        </div>
        <div class="col-sm-8">  
          <%= f.text_field :address %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :city %>
        </div>
        <div class="col-sm-8">        
          <%= f.text_field :city %>
        </div>   
      </div>

      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :state %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :state %>
        </div>  
      </div>

      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :country_code, 'Country' %>
        </div>
        <div class="col-sm-8">  
          <%= f.collection_select :country_code, @countries, :alpha2, :name %>
        </div>  
      </div>

      <div class="form-group">
        <div class="control-label col-sm-2">    
          <%= f.label :instructions %>
        </div>
        <div class="col-sm-8">
          <%= f.text_area :instructions %>
        </div>  
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit 'Continue to add images', class: 'btn btn-primary btn-lg' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
