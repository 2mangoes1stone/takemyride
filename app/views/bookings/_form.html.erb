<body data-turbolinks="false">

<%= form_for(booking) do |f| %>
  <% if booking.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(booking.errors.count, "error") %> prohibited this booking from being saved:</h2>

      <ul>
      <% booking.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :vehicle_listing_id %>
  <%= hidden_field_tag 'stripeToken' %>

  <%#<h1 class="days">= @days </h1>%>

  <div class="field">
    <%= f.label :start_date %>
    <%= f.text_field :start_date, id: 'start_date' %>
  </div> 

  <div class="field">
    <%= f.label :end_date %>
    <%= f.text_field :end_date, id: 'end_date' %>
  </div>

  <div class="field">
    <%= f.label :comments %>
    <%= f.text_area :comments %>
  </div>
  
  <div class="field">
    <%= f.label :address %>
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :city %>
    <%= f.text_field :city %>
  </div>

  <div class="field">
    <%= f.label :state %>
    <%= f.text_field :state %>
  </div>

  <div class="field">
    <%= f.label :country_code, 'Country' %>
    <%= f.collection_select :country_code, @countries, :alpha2, :name %>
  </div>

<button id="payButton">Payment</button>



<script src="https://checkout.stripe.com/checkout.js"></script>

<script>
$(function(){

  var handler = StripeCheckout.configure({
    key: '<%= Rails.configuration.stripe[:publishable_key] %>',
    locale: 'auto',
    name: 'Take my Ride',
    description: 'Booking',
    email: '<%= current_user.email %>',
    token: function(token) {
      $('input#stripeToken').val(token.id);
      $('form').submit()
    }
  })

  var price = <%= @price.to_json %>
  var amount = price;
  updateAmount()

  $('#start_date, #end_date')
    .datepicker({dateFormat: 'yy-mm-dd'})

  $('#start_date, #end_date').change(updateAmount)

  function updateAmount() {
    var startDate = $('#start_date').val()
    var endDate = $('#end_date').val()

    var oneDay = 24*60*60*1000
    var firstDate = new Date(startDate)
    var secondDate = new Date(endDate)

    var diffDays = Math.round(Math.abs((firstDate.getTime() - secondDate.getTime()) / (oneDay) ))
    
    $('.days').text(diffDays)

    
    var newAmount = diffDays * price
    amount = newAmount;
  }


  $('#payButton').click(function(e){
    e.preventDefault()
    handler.open({
      amount: amount
    })
  })

})
</script>

<% end %>